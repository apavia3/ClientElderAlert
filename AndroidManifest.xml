<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clientelderalert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false" >
        <activity
            android:name="com.example.clientelderalert.StatusActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity 
		    android:name="com.example.clientelderalert.SettingsActivity"></activity>
		<activity 
    		android:name="com.example.clientelderalert.ContactsActivity"></activity>
		<activity 
    		android:name="com.example.clientelderalert.HistoryActivity"></activity>
		<activity 
    		android:name="com.example.clientelderalert.TodayActivity"></activity>
		<activity 
    		android:name="com.example.clientelderalert.YesterdayActivity"></activity>
		<activity 
    		android:name="com.example.clientelderalert.LastweekActivity"></activity>
    </application>

</manifest>